{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
